platform :ios, '10.0'

use_frameworks!
inhibit_all_warnings!

target 'Demo' do

  pod 'SwiftLint'

  pod 'GitHubKit', :path => '../'

  target 'Tests' do
    inherit! :search_paths

    pod 'JacKit',    :git => 'https://github.com/mudox/jac-kit.git'

    pod 'GitHubKit', :path => '../'

    # BDD
    pod 'Quick'
    pod 'Nimble'

    # Testing RxSwift code
    pod 'RxTest'
    pod 'RxBlocking'
    pod 'RxNimble'

    # Requests stubbing
    pod 'OHHTTPStubs/Swift'
  end
end
